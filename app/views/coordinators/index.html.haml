%h1 Listing coordinators

%table.table.table-striped.span9
  %thead
    %tr
      %th Name
      %th Location
      %th Contact
      %th

  - @coordinators.each do |coordinator|
    %tr
      %td= coordinator.name
      %td= coordinator.location
      %td= coordinator.contact
      %td.btn-group
        = link_to icon_tag("play") + 'Show', coordinator, class: "btn btn-info"
        = link_to icon_tag("calendar") + 'Events', coordinator_events_path(coordinator), class: "btn btn-info"
        - if user_signed_in?
          = link_to icon_tag("wrench") + 'Edit', edit_coordinator_path(coordinator), class: "btn btn-info"
          = link_to icon_tag("trash") + 'Delete', coordinator, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger"

%br

= link_to icon_tag("star-empty") + 'New Coordinator', new_coordinator_path, class: "btn btn-success" if user_signed_in?
