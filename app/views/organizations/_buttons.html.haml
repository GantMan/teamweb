%td.btn-group.col-md-6.visible-md.visible-lg
  = link_to icon_tag("play") + 'Show', org, class: "btn btn-info"
  = link_to icon_tag("calendar") + 'Seasons', organization_seasons_path(org), class: "btn btn-info"
  - if user_signed_in?
    = link_to icon_tag("wrench") + 'Edit', edit_organization_path(org), class: "btn btn-info"
    = link_to icon_tag("trash") + 'Delete', org, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger"
%td.col-xs-3.hidden-md.hidden-lg
  .btn-group
    %button{:class =>"btn btn-info dropdown-toggle", :"data-toggle" => "dropdown"}
      Actions
      %span.caret
    %ul.dropdown-menu{role:"menu"}
      %li 
        = link_to bs_icon_tag("play") + 'Show', org
        = link_to icon_tag("calendar") + 'Seasons', organization_seasons_path(org)
      - if user_signed_in?
        %li
          = link_to bs_icon_tag("wrench") + 'Edit', edit_organization_path(org)
        %li
          = link_to bs_icon_tag("trash") + 'Delete', org, :method => :delete, :data => { :confirm => 'Are you sure?' }