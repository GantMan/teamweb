.navbar-wrapper
  .container
    .navbar.navbar-inverse.navbar-static-top
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Teamweb", root_url, class: "navbar-brand"  
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li
              = nav_link "Create Event", new_event_path
            %li
              = nav_link "Events", all_events_path
            %li
              = nav_link "Organizations", organizations_path
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                  = fa_icon_tag 'user'
                  My Account
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to edit_user_registration_path do
                      = fa_icon_tag 'user'
                      Profile
                  %li.divider
                  %li
                    = link_to destroy_user_session_path, method: :delete do
                      = fa_icon_tag 'signout'
                      Logout
            - else
              %li
                = link_to new_user_registration_path do                  
                  -#%button.btn.btn-default.navbar-btn{type: "button"}
                  = bs_icon_tag 'star'
                  Sign Up

              %li                    
                %i.icon-signup
                = link_to new_user_session_path do
                  = fa_icon_tag 'user'
                  Login
               

    = render_breadcrumbs

