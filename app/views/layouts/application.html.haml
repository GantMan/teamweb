    = render "shared/navbar"
    .container
      .masthead.clearfix
        - if alert
          .alert.alert-warning
            %button.close{:type => "button", :"data-dismiss" => "alert"} &times;
            %strong ALERT:
            = alert
        - elsif notice
          .alert.alert-info
            %button.close{:type => "button", :"data-dismiss" => "alert"} &times;
            %strong NOTICE:
            = notice

        / Add your site or application content here
        = yield
