= simple_form_for [@coordinator, @event, @team], :html => {:class => 'form-horizontal' } do |f|
  - if @team.errors.any?
    %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
    %ul
      - @team.errors.full_messages.each do |msg|
        %li= msg
  %fieldset
    = f.input :name, label: "Your team name please"
    = f.submit 'Save'


