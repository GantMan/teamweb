%h1
  = @event.name
.col-md-7{style: "min-height:450px;"}
  .col-md-4
    %p
      %strong About:
      = @event.about
  .col-md-2.well
    %p
      %strong Start Date:
      = @event.start.try(:format_like, "Jan 1st 2000")
    %p
      %strong End Date:
      = @event.end.try(:format_like, "Jan 1st 2000")
  %h4{style: "clear: left;"}
    %strong Event Details

  = render 'tab_details'

/ Map    
.col-md-4
  = gmaps4rails(@maps_json)
  %p
    %strong Location
    = @event.location

/ Organization Info
.well.col-md-3
  %h4 Organization info
  %p
    %strong
      = @organization.name
  %p
    = @organization.about
  %p
    = @organization.contact

/ Button bar
.col-md-12
  .btn-group
    = link_to icon_tag("hand-left") + 'Back', organization_season_events_path, class: "btn btn-primary"
    = link_to icon_tag("wrench") + 'Edit', edit_organization_season_event_path(@season.organization, @season, @event), class: "btn btn-info"
    = link_to 'Add me to event', add_user_organization_season_event_path(@organization, @season, @event), class: "btn btn-info"
