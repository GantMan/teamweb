%h1
  = @event.name
.span7{style: "min-height:450px;"}
  %p
    %strong About:
    = @event.about
  %p
    %strong Start:
    = @event.start.try(:format_like, "Jan 1st 2000")
  %p
    %strong End:
    = @event.end.try(:format_like, "Jan 1st 2000")
  %h4
    %strong Event Details
  %p
    = LiterateRandomizer.paragraphs(paragraphs: 4)
.span3
  = gmaps4rails(@maps_json)
  %p
    %strong Location
    = @event.location
.well.span4
  %h4 Coordinator info
  %p
    %strong
      = @coordinator.name
  %p
    = @coordinator.about
  %p
    = @coordinator.contact
.span12
  .btn-group
    = link_to icon_tag("hand-left") + 'Back', coordinator_events_path, class: "btn btn-primary"
    = link_to icon_tag("wrench") + 'Edit', edit_coordinator_event_path(@event.coordinator, @event), class: "btn btn-info"
